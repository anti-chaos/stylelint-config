{
  "root": true,
  "env": {
    "node": true
  },
  "extends": ["standard", "plugin:prettier/recommended"],
  "rules": {
    "prettier/prettier": ["error", {
      "printWidth": 100,
      "useTabs": false,
      "tabWidth": 2,
      "semi": true,
      "singleQuote": true,
      "jsxSingleQuote": true,
      "quoteProps": "as-needed",
      "trailingComma": "all",
      "bracketSpacing": true,
      "jsxBracketSameLine": false,
      "arrowParens": "avoid",
      "vueIndentScriptAndStyle": false,
      "endOfLine": "lf"
    }]
  }
}
